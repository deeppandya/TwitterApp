<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:foregroundGravity="bottom"
                  android:layout_margin="8dp"
                  android:padding="8dp"
                  android:orientation="horizontal">

        <ImageButton android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:drawableStart="@drawable/ic_favorite_border_black_24dp"
                  android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                  android:drawablePadding="8dp"
                  android:gravity="start|center_vertical"
                  android:focusable="true"
                  android:text="@string/favorite"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:drawableStart="@drawable/twitter_holo"
                  android:drawableLeft="@drawable/twitter_holo"
                  android:drawablePadding="8dp"
                  android:gravity="start|center_vertical"
                  android:focusable="true"
                  android:text="@string/retweet"/>

    </LinearLayout>

    <android.support.v7.widget.CardView

            android:id="@+id/cv_tweet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/created_at"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_tweet_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textSize="12sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_user"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_tweet_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textSize="12sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tweet_text"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_tweet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textSize="12sp"/>

            <fragment
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:context=".activity.TweetDetailActivity"
                    android:padding="8dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>