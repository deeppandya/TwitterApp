<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/created_at"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_tweet_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:padding="8dp"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/tv_tweet_user_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_user"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_user_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:padding="8dp"
                android:textSize="12sp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tweet_text"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_tweet_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:padding="8dp"
                android:textSize="12sp"/>

        <ImageView
                android:id="@+id/img_tweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:contentDescription="@string/tweet_image"/>

        <VideoView
                android:id="@+id/vvTweet"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                android:padding="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>